<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_setting"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Hãy nói đặt xe ngay với..."
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_hovaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn văn A"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_nhanhieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Honda - "
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/txt_soghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 chỗ"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_bienso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29H9-666.66"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_giathanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.000đ/1km"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_sosanhgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá Trung bình"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#000000"
            android:textColor="#000000"
            android:textSize="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_soxe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_index_car"
                android:gravity="center"
                android:padding="7dp"
                android:text="05"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_sodienthoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0969551162"
                android:textColor="#ffffff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_datxe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/boy"
                android:text="Đặt xe"
                android:textColor="#f70e0e" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>